colorWhite = #fff

.app__main__mainView
  background-color #5E5D5A
  height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  color #fff
  overflow: hidden;

.app__main__mainTitle
  position absolute
  left 15%
  top 40%

.app__main__nextSlidePage
  position absolute
  right 15%
  top 42%
  color colorWhite
  width 85px
  height 85px
  border-radius 50%
  background-color transparent
  border 4px solid colorWhite
  outline none
  &:hover
   background-color rgba(255,255,255, 0.5)


.app__main__nextSlidePage_nextSlidePageArrow
  border solid colorWhite
  border-width 0 4px 4px 0
  display inline-block
  padding 6px
  margin 5px 5px 0 0
  transform rotate(-45deg)

.app__main__languageToggle
  width 45px
  height 45px
  border-radius 50%
  background-color transparent
  border 2px solid colorWhite
  outline none
  color colorWhite
  &:hover
    background-color rgba(255,255,255, 0.5)