colorWhite = #fff

.mainView
  background-color #5E5D5A
  height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  color #fff
  overflow: hidden;

.mainTitle
  position absolute
  left 15%
  top 40%

.nextSlidePage
  position absolute
  right 15%
  top 42%
  color colorWhite
  width 75px
  height 75px
  border-radius 50%
  background-color transparent
  border 3px solid colorWhite
  outline none
  &:hover
   background-color rgba(255,255,255, 0.5)


.nextSlidePageArrow
  border solid colorWhite
  border-width 0 3px 3px 0
  display inline-block
  padding 6px
  margin-right 5px
  transform rotate(-45deg)

